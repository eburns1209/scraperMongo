<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-8">
  <h1>WeightLifting News</h1>
  </div>
  <div class="col-xs-6 col-md-4">
          
  </div>
</div>
<div class="row">        
    <div class="col-sm-4">
        <a class="articleURL" href="{{ this.articleURL }}">
          <div id="picture">
            <img src="{{ this.imgURL }}">
          </div>
        </a>
    </div>
  
    <div class="col-sm-2">
          <div id="lifter">
            {{!-- <img src=""/> --}}
            <div id="buttons">
              <button id="next" data-id="{{ this._id }}">Next</button>
            </div>
          </div>
    </div>

    <div class="col-sm-4">
      <a class="articleURL" href="{{ this.articleURL }}">
          <div id="content">
            <h2>{{ this.title }}</h2>
            <p>{{ this.synopsis }}</p>
          </div>
      </a>
    </div>
</div>



<div class="row">
  <div class="col-sm-4">
    <div id="arms1">
      <div class="comments">
        <h3>Post a Comment:</h3>
        <input id="comment" type="text" name="comment" placeholder="Type your comment here...">
        <button id="post" data-id="{{ this._id }}">Post</button>
      </div>
      
    </div>
  </div>

    <div class="col-sm-2">
          <div id="lifter">
            {{!-- <img src=""/> --}}
           {{!--  <div id="buttons">
              <button id="next" data-id="{{ this._id }}">Next</button>
            </div> --}}
          </div>
    </div>

  <div class="col-sm-4">
    <div id="arms2">
      <div class="comments">
        <h3>Previously Left Comments:</h3>
        <div id="comment-holder">
          {{#each this.comments as |value key|}}
            <p><span class="number">{{ addOne key }}</span> {{ value.text }} <a href="#" class="remove" data-id="{{ value._id }}">X</a></p>
          {{/each}}
        </div>
      </div>
      
    </div>
  </div>
</div>